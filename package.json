{
  "name": "poll",
  "version": "1.0.1",
  "license": "MIT",
  "description": "A simple poll function based on async, await, and an infinite loop",
  "author": {
    "name": "Philipp Rudloff",
    "url": "https://kleinfreund.de"
  },
  "homepage": "https://github.com/kleinfreund/poll",
  "repository": {
    "type": "git",
    "url": "https://github.com/kleinfreund/poll.git"
  },
  "bugs": {
    "url": "https://github.com/kleinfreund/poll/issues"
  },
  "keywords": [
    "poll",
    "async",
    "await"
  ],
  "exports": "./dist/cjs/poll.js",
  "main": "./dist/cjs/poll.js",
  "module": "./dist/esm/poll.mjs",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm && npm run rename-to-mjs",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "test": "jest",
    "prepublishOnly": "npm test",
    "prepack": "npm run build",
    "rename-to-mjs": "mv dist/esm/poll.js dist/esm/poll.mjs"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
